<?xml version="1.0" encoding="utf-8" ?>

<configuration debug="true">
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!--  LOG 출력 PATTERN  -->
        <encoder>
            <pattern>[%d{yyyy-MM-dd HH:mm:ss}] [%thread] %highlight(%-5level) %cyan(%logger{20}) - %msg %n</pattern>
        </encoder>
    </appender>

    <!-- LOG LEVEL -->
    <root level="DEBUG">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
